  <%- include("cabecera"), {tituloWeb: "Editar Articulos"}  %>
  <body>
    <%- include("navbar")%>
    <div class="container">
        <h3 class="modal-title mt-3" id="exampleModalLabel" style="text-align: center;">Editar Articulo</h3>
      <div class="modal-body">
        <!--va a la ruta, actualiza y redirige a 'http://localhost:3000/api/articulos/update' -->
        <form action="/api/articulos/update/<%= rows[0].id %>" method="POST">
          <div class="mb-3">
            <label for="nombre" class="col-form-label">Nombre del articulo:</label>
            <input name="nombre" type="text" class="form-control" id="nombre" value=" <%= rows[0].nombre%>" required>
          </div>
          <div class="mb-3">
            <label for="precio" class="col-form-label">Precio:</label>
            <input name="precio" type="number" class="form-control" id="precio" value="<%= rows[0].precio%>"min="1" max="100000" pattern="^[0-9]+" required>
          </div>
          <div class="mb-3">
            <label for="stock" class="col-form-label">Stock:</label>
            <input name="stock" type="number" class="form-control" id="stock" value="<%= rows[0].stock%>"min="1" max="100000" pattern="^[0-9]+" required>
          </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button id="btnActualizarArticulo" type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <!-- JavaScript -->
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
  </body>
</html>

